/* pages/index/index.wxss */

.banner {
    height: 150px;
    background-color: #ddd;
}

.customSwiper {
    height: 150px;
    position: relative;
}

.customSwiper  image{
    height: 150px;
}

.tab {
    height: 70rpx;
    position: absolute;
    bottom:13px;
    display: flex;
    width: 100%;
    text-align: center;
    justify-content: center;
    align-items: center;
}

.tab .tab-item {
    background-color: #ccc;
    height: 50rpx;
    width: 50rpx;
    line-height: 50rpx;
    font-size: 12rpx;
    color: #fff;
    border-radius: 4px;
    margin-right: 10px;
}

.tab .tab-item.selected {
    background-color: #2a579a;
}

.index {
    min-height: 100vh;
    width: 96%;
    margin: 10px auto;
    font-size: 24px;
    color: #111;
  }
  .thisCityName,.thisCityName-change{
  display: inline-block;
  vertical-align: top;
  font-size: 15px;
}
.thisCityName-change{
  border: 1px solid #2a579a;
  padding: 0px 10px;
  margin-left: 10px;
}
.weatherwrap{
    height: 100%;
    display:flex;
    flex-direction:column;
    box-sizing:border-box;
    padding:15rpx 15rpx;
    margin-left: 15rpx;
    margin-right: 15rpx;
    margin-top: 10rpx;
    color:  #666;
    font-size:15px;
    background-color:#f5f5f5;
  }

  /*当天天气信息*/
  .info{
    margin-top:20rpx;
    width:100%;
    height:225px;
  }
  
  /*城市名称*/
  .city{
    margin: 20rpx;
    border-bottom:1px solid #2a579a;
  }
  
  /*当天温度*/
  .temp{
    font-size: 100rpx;
    line-height: 130rpx;
    text-align: center;
    padding-top:20rpx;
    color:#2a579a;
  }
  
  /*感冒描述*/
  .weather{
    line-height: 22px;
    margin: 20rpx;
    padding: 0 10px;
    display: flex;
    flex-direction: row;
    justify-content:space-around;
  }
  .life{
    line-height: 22px;
    margin: 5px 0;
    padding: 0 5px;
  }
  
  .changeCity{
   margin-right: 5rpx;
   vertical-align: bottom;
  }